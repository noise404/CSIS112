<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="39dp"
        android:text="Jimson Whiskeyman CSCI 112"
        app:layout_constraintBottom_toTopOf="@+id/billIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/billText"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="41dp"
        android:text="Bill Amount:"
        app:layout_constraintBottom_toTopOf="@+id/tipText"
        app:layout_constraintEnd_toStartOf="@+id/billIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/tipText"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="32dp"
        android:text="Tip Percentage:"
        app:layout_constraintBottom_toTopOf="@+id/tipSeek"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/billIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textPersonName|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tipPercent"
        app:layout_constraintStart_toEndOf="@+id/billText"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <SeekBar
        android:id="@+id/tipSeek"
        android:layout_width="268dp"
        android:layout_height="31dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="38dp"
        android:max="100"
        android:progress="30"
        app:layout_constraintBottom_toTopOf="@+id/tipAmountText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tipPercent"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginBottom="33dp"
        android:text="30%"
        app:layout_constraintBottom_toTopOf="@+id/tipSeek"
        app:layout_constraintStart_toEndOf="@+id/tipText" />

    <TextView
        android:id="@+id/tipAmountText"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="37dp"
        android:text="Tip Amount:"
        app:layout_constraintBottom_toTopOf="@+id/totalTextText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalTextText"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="37dp"
        android:text="Total Amount:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipAmountText" />

    <TextView
        android:id="@+id/tipAmount"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="48dp"
        android:text="$0.00"
        app:layout_constraintBottom_toTopOf="@+id/totalAmount"
        app:layout_constraintStart_toEndOf="@+id/tipAmountText"
        app:layout_constraintTop_toBottomOf="@+id/tipSeek" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="48dp"
        android:text="$0.00"
        app:layout_constraintStart_toEndOf="@+id/totalTextText"
        app:layout_constraintTop_toBottomOf="@+id/tipAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>